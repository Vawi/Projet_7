<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <beans>
        <!-- Chargement du fichier properties contenant
            la configuration de la datasource vers DB_TICKET  -->
        <bean id="dataSourceP7Configuration" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
            <property name="location" value="file:${application.home}/conf/db-P7.properties"/>
        </bean>

        <!-- CrÃ©ation de la datasource "dataSourceTicket" -->

        <bean id="dataSourceP7"
              class="org.apache.commons.dbcp2.BasicDataSourceFactory"
              factory-method="createDataSource"
              destroy-method="close">
            <constructor-arg ref="dataSourceP7Configuration"/>

        </bean>

    </beans>

</beans>